<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/update_version_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="5dp"
        android:text="正在下载……"
        android:textColor="@color/black" />

    <ProgressBar
        android:id="@+id/update_version_pb"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/update_version_tv"
        android:indeterminateTint="@color/blue_text"
        android:indeterminateTintMode="src_atop"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintTop_toBottomOf="@id/update_version_tv"
        android:progressDrawable="@drawable/barcolor"/>

    <TextView
        android:id="@+id/update_version_cancel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/update_version_pb"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:gravity="right"
        android:padding="5dp"
        android:text="取消"
        android:textColor="#217ede" />
</RelativeLayout>